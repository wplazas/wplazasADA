@model mvcpruebaTecnica.Models.CompradorProducto
@{
    ViewData["Title"] = "Vista Comprador";
}
<h4>Bienvenida(o) @ViewBag.usuario</h4>

 
<div class="row">
    <div class="col-md-6">
        <form asp-action="Comprasform"  method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="usuario" class="control-label"></label>
                    <input asp-for="usuario" value=@ViewBag.usuario readonly class="form-control" />
                    <span asp-validation-for="usuario" class="text-danger"></span>
                </div>
         
            <div class="form-group">
                <label asp-for="producto" class="control-label"></label>
                <input asp-for="producto" class="form-control" />
                <span asp-validation-for="producto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cantidad" class="control-label"></label>
                <input asp-for="cantidad" class="form-control" />
                <span asp-validation-for="cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="disponible" class="control-label"></label>
                <input asp-for="disponible" class="form-control"  />
                <span asp-validation-for="disponible" class="text-danger"></span>
            </div>
 
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Enviar" class="btn btn-primary btn-block" />
                </div>
                
            </div>
 
        </form>
    </div>
</div>
 

@section scripts
{
     @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function() {
            //alert("Test");
        });
    </script>
}
